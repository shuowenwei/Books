for i=1:4
    H=hilb(n(i));
    x=ones(n(i),1);
    b=sum(H)';
    str1=sprintf('******************Below are results when n = %d ', n(i));
    disp(str1);
    [U S V]=svd(H); % here changes 
    xcvd=V*inv(S)*U'*b; 
    r=b-H*xcvd
    ans=norm(r)/norm(b);
    str2=sprintf('||r||/||b|| = %d ', ans);
    disp(str2); 
    ans2=norm(x-xcvd)/norm(x);
    str3=sprintf('||x-xc||/||x|| = %d ', ans2);
    disp(str3);    
end
